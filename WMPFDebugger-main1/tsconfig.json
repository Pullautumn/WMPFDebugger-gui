{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "ES2021.String"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"]
}
